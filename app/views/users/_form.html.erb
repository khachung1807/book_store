<%= form_for @user do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name, t(".name") %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :gender, t(".gender") %>
  <%= f.select :gender, User.gender_attributes_for_select, class: "selected" %>

  <%= f.label :birthday, t(".birthday") %>
  <%= f.date_field :birthday, id: "datepicker" %>

  <%= f.label :address, t(".address") %>
  <%= f.text_field :address, class: "form-control" %>

  <%= f.label :phone_number, t(".phone_number") %>
  <%= f.text_field :phone_number, class: "form-control" %>

  <%= f.label :email, t(".email") %>
  <%= f.email_field :email, class: "form-control" %>

  <%= f.label :password, t(".password") %>
  <%= f.password_field :password, class: "form-control" %>

  <%= f.label :password_confirmation, t(".confirmation") %>
  <%= f.password_field :password_confirmation, class: "form-control" %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
