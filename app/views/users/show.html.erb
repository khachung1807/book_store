<% provide :title, @user.name %>
<div class="container text-center">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
          <%= @user.address %>
          <%= @user.phone_number %>
          <%= @user.user_type %>
        </h1>
      </section>
    </aside>
  </div>
</div>
